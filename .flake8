[flake8]
statistics = True
show-source = True

select = E,F,W,C,I,B,S,T,Q
ignore = S101,S608
per-file-ignores =
    tests/test_init_import.py:F401
    tests/conftest.py:S311
    axion/handler/__init__.py:F811

import-order-style=appnexus
application-package-names=axion,tests

format = pylint
hang-closing = false

max-line-length = 90
inline-quotes = single

disable-noqa = True
exclude =
    .git,
    __pycache__,
    .mypy_cache,
    .idea,
    build,
    dist
